{
	"type": "project",
	"name": "julien/mvc-experimentations",
    "authors": [
        {
            "name": "Julien Guillot",
            "email": "guillot21julien@gmail.com"
        }
    ],
	"require": {
		"twig/twig": "^2.0",
		"vlucas/phpdotenv": "^3.3",
		"ext-pdo": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.3"
	},
	"config": {
		"preferred-install": {
			"*": "dist"
		},
		"sort-packages": true
	},
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Core\\": "src/Core/"
        }
    },
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	}
}
